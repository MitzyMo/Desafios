<body class="text-center">
  <h3>Enter your email address to reset your password</h3>
  <form action="api/users/resetPassword" method="POST" class="container mt-4">
    <div class="mb-3">
      <label for="email" class="form-label">Email:</label>
      <input type="email" id="email" name="email" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Send Password Reset Email</button>
  </form>
  {{#if error}}
  <div style="font-weight: bolder; color: red;">{{error}}</div>
  {{/if}}
  {{#if message}}
  <div style="font-weight: bolder; color: rgb(44, 124, 243);">{{message}}</div>
  {{/if}}
</body>
