<body class="text-center">
    <form class="form-signin" action="/api/sessions/login" method="post">
        {{#if error}}
        <div style="font-weight: bolder; color: red;">{{error}}</div>
        {{/if}}
        {{#if message}}
        <div style="font-weight: bolder; color: rgb(44, 124, 243);">{{message}}</div>
        {{/if}}
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required="" autofocus="">
        <br>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required="">
        <input type="text" name="web" value="web" hidden>
        <br>
        <button class="btn btn-lg btn-primary btn-block" type="submit" value="Login">Sign in</button>
    </form>
</body>

